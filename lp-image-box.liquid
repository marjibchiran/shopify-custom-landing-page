    },
  ],
   "blocks": [
  {
    "type": "Imagebox",
    "name": "Image Box",
    "settings": [
       {
      "type": "text",
      "id": "title",
      "label": "Text",
      "default": "Mix one scoop of AG1"
    },
        {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    }
    ]
  }
  ],
  "presets": [
    {
      "name": "Image Box"
    }
  ]
}
{% endschema %}
